<script>
  // Add event listener to the logout link
  document.getElementById('logoutLink').addEventListener('click', function(event) {
    event.preventDefault();  // Prevent default link behavior

    // Create a form to submit the POST request to logout
    const form = document.createElement('form');
    form.method = 'POST';// set the form method to POST
    form.action = '/logout'; // set the action to the logout route

    // Append the form to the body and submit it
    document.body.appendChild(form);
    form.submit(); // submit the form (this triggers a POST request to log the user out)
  });
</script>
