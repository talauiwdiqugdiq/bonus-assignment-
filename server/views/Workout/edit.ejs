<%- include('../Partials/header'); -%> 
<%- include('../Partials/main_nav'); -%> 
<!-- Content for Edit Page -->
<div class="container my-5"> <!--creates a main container with top and bottom margin-->
    <div class="row justify-content-center"> <!--centers the form horizontally-->
        <div class="col-md-8 col-lg-6"> <!--responsive column size-->
            <h1 class="text-center display-4 mb-3" style="color: #1a73e8;"><%= title %></h1><!--page title centered with blue text-->
            <form class="form edit-form" method="POST" style="box-shadow: 0 0 15px rgba(0, 0, 0, 0.1); padding: 20px; border-radius: 10px; background-color: #fff;"> <!--styled form with shadow, padding, rounded corners-->
                <!-- Name Field -->
                <div class="form-group mb-3"> <!--form group with bottom margin-->
                    <label for="nameTextField" style="font-weight: bold;">Name</label> <!--label with bold text-->
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter Your Name" name="Name" value="<%= Workout.Name %>" required style="border-radius: 8px;"> <!--text input with rounded corners-->
                </div>
                
                <!-- Workout Type Field -->
                <div class="form-group mb-3"> 
                    <label for="workoutTypeTextField" style="font-weight: bold;">Workout Type</label> 
                    <input type="text" class="form-control" id="workoutTypeTextField" placeholder="Enter the Workout Type" name="WorkoutType" value="<%= Workout.WorkoutType %>" required style="border-radius: 8px;"> 
                </div>
                
                <!-- Exercise Details Field -->
                <div class="form-group mb-3"> 
                    <label for="exerciseDetailsTextArea" style="font-weight: bold;">Exercise Details</label> 
                    <textarea class="form-control" id="exerciseDetailsTextArea" placeholder="Enter Exercise Details (sets/reps)" name="ExerciseDetails" required style="border-radius: 8px;"><%= Workout.ExerciseDetails %></textarea> 
                </div>
                
                <!-- Duration Field -->
                <div class="form-group mb-3"> 
                    <label for="durationTextField" style="font-weight: bold;">Duration (in minutes)</label> 
                    <input type="number" class="form-control" id="durationTextField" placeholder="Enter Duration" name="Duration" value="<%= Workout.Duration %>" required style="border-radius: 8px;" min="1"> <!--number input with rounded corners and minimum value-->
                </div>
                
                <!-- Performance Rating Field -->
                <div class="form-group mb-4"> <!--form group with larger bottom margin-->
                    <label for="performanceRatingTextField" style="font-weight: bold;">Performance Rating (1-10)</label> <!--label with bold text-->
                    <input type="number" class="form-control" id="performanceRatingTextField" placeholder="Rate Your Performance" name="PerformanceRating" value="<%= Workout.PerformanceRating %>" required style="border-radius: 8px;" min="1" max="10"> <!--number input with rounded corners and range-->
                </div>
                
                <!-- Buttons -->
                <div class="d-flex justify-content-between"> <!--flex container to space buttons evenly-->
                    <button class="btn btn-primary btn-sm" type="submit" style="border-radius: 8px;"> <!--small blue button for submit-->
                        <i class="fas fa-edit"></i> Submit
                    </button>
                    <a href="/workoutlist" class="btn btn-warning btn-sm" role="button" style="border-radius: 8px;"> <!--small yellow button for cancel with link back to workout list-->
                        <i class="fas fa-undo"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../Partials/footer'); -%> 
